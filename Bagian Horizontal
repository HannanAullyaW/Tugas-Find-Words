bool searchHorizontal(char *carikata){
    
    bool posisi = false; 

    for (int i = 0; i < rows; i++){

        // mencari kata ada atau tidak ada
        if (strstr(words[i],carikata) || strstr(reverse(words[i]),carikata)){
            posisi = true;
            break;    
        }
    }
    return posisi;
}
